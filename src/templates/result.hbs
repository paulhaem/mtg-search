<form id="solr-query" action=" ">
  <div class="form-group">
    <input id="title-field" class="form-control" name="title" type="text" placeholder="Query String">
    <div class="form-check form-check-inline">
      <span>Filter cards: </span>
      <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="White">
      <label class="form-check-label" for="inlineCheckbox1">White</label>
      <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="Blue">
      <label class="form-check-label" for="inlineCheckbox2">Blue</label>
      <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="Red">
      <label class="form-check-label" for="inlineCheckbox3">Red</label>
      <input class="form-check-input" type="checkbox" id="inlineCheckbox4" value="Green">
      <label class="form-check-label" for="inlineCheckbox4">Green</label>
      <input class="form-check-input" type="checkbox" id="inlineCheckbox5" value="Black">
      <label class="form-check-label" for="inlineCheckbox5">Black</label>
    </div>
    <input class="btn btn-primary" type="submit" value="Query">
  </div>
</form>
<div id="results">
  <h2 class="alert alert-info"><span id="results-found">Nothing found.</span><span id="query-string"></span></h2>
  <hr>
    {{#each docs}}
      <div class="">
        <h2>{{ name_txt_en }}</h2>
        <img src="http://gatherer.wizards.com/Handlers/Image.ashx?multiverseid={{ multiverseId_i }}&type=card"/>
        <h3>Information</h3>
        <p>{{text_txt_sort}}</p>
        <table class="table table-bordered" style="width: 30%">
          <thead>
            <tr>
              <th scope="col">costs</th>
              <th scope="col">power</th>
              <th scope="col">toughness</th>
              <th scope="col">rarity</th>
            </tr>
          </thead>
          <tr>
            <td>{{cmc_i}}</td>
            <td>{{checker power_i}}</td>
            <td>{{checker toughness_i}}</td>
            <td>{{rarity_txt_en}}</td>
          </tr>
        </table>
        <table class="table table-bordered" style="width: 15%">
          <thead>
            <tr>
              <th scope="col">color</th>
            </tr>
          </thead>

          {{#each colors_txt_sort}}
            <tr>
              <td>{{this}}</td>
            </tr>
          {{/each}}
        </table>
         <table class="table table-bordered" style="width: 15%">
          <thead>
            <tr>
              <th scope="col">types</th>
            </tr>
          </thead>
          {{#each subtypes_txt_sort}}
            <tr>
              <td>{{this}}</td>
            </tr>
          {{/each}}
        </table>
      </div>
    {{/each}}

  </div>
